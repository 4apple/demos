<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Read Asserts"
        android:id="@+id/btnReadAsserts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Read Raw"
        android:id="@+id/btnReadRaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etInput"
        android:hint="请输入内容"
        android:text="演示内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="写入内部存储的文件数据"
        android:id="@+id/btnWriteFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="读取内部存储的文件数据"
        android:id="@+id/btnReadFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/show"
        android:hint="show content from file here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/etExtInput"
        android:hint="请输入般保存到外部存储的内容"
        android:text="演示内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="写入外部存储的文件数据"
        android:id="@+id/btnExtWriteFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="读取外部存储的文件数据"
        android:id="@+id/btnExtReadFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvExtshow"
        android:hint="show content from ext file here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
